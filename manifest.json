{
  "manifest_version": 3,
  "name": "Kalshi Market Insights for Twitter",
  "version": "0.2.0",
  "description": "Display Kalshi prediction market data alongside relevant tweets",
  "permissions": [
    "https://api.elections.kalshi.com/*"
  ],
  "host_permissions": [
    "https://api.elections.kalshi.com/*",
    "*://twitter.com/*",
    "*://x.com/*",
    "https://pbs.twimg.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://twitter.com/*",
        "*://x.com/*"
      ],
      "js": [
        "src/kalshiAPI.js",
        "src/marketMatcher.js",
        "src/contentScript.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}