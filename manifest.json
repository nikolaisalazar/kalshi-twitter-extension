{
    "manifest_version": 3,
    "name": "Kalshi Market Insights for Twitter",
    "version": "1.0.0",
    "description": "View Kalshi prediction market data for tweets in real-time",
    
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    
    "permissions": [
      "storage"
    ],
    
    "host_permissions": [
      "https://api.elections.kalshi.com/*",
      "https://twitter.com/*",
      "https://x.com/*",
      "https://pbs.twimg.com/*"
    ],

    "content_scripts": [
        {
          "matches": [
            "*://twitter.com/*",
            "*://x.com/*",
            "*://*.twitter.com/*",
            "*://*.x.com/*"
          ],
          "js": ["src/contentScript.js"],
          "run_at": "document_idle"
        }
    ],
    
    "action": {
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      },
      "default_title": "Kalshi Market Insights"
    },
    
    "background": {
      "service_worker": "src/background.js"
    }
  }